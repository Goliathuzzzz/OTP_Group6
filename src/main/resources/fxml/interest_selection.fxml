<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ScrollPane?>
<AnchorPane prefHeight="852" prefWidth="393" styleClass="edit-profile" stylesheets="@/css/animal.css"
            xmlns="http://javafx.com/javafx/22"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.InterestSelectionController">

    <!-- bg image -->
    <Pane prefHeight="556" prefWidth="393" layoutX="0" layoutY="0" styleClass="tausta"/>

    <!-- white panel -->
    <Pane layoutX="0" layoutY="0" prefHeight="772" prefWidth="393" styleClass="rectangle15"/>

    <!-- go back icon -->
    <ImageView fx:id="goBack" fitHeight="21.0" fitWidth="16" layoutX="40.0" layoutY="120" onMouseClicked="#handleBack">
        <Image url="@/images/Icon.png"/>
    </ImageView>

    <!-- Dynamic selection container -->
    <ScrollPane fx:id="scrollContainer" layoutX="38" layoutY="190" prefWidth="315" prefHeight="430"
                fitToWidth="true" fitToHeight="false" styleClass="scroll-pane">
        <VBox fx:id="optionsContainer" spacing="10" prefWidth="300"/>
    </ScrollPane>


    <!-- Continue button -->
    <Button fx:id="continueButton" layoutX="40" layoutY="686" prefHeight="46" prefWidth="313"
            styleClass="rectangle14" text="jatka" onMouseClicked="#handleContinue"/>

    <!-- Bottom nav -->
    <Pane layoutY="765" prefHeight="87" prefWidth="393" styleClass="bottom-nav">
        <ImageView fx:id="homeIcon" fitHeight="45" fitWidth="42" layoutX="65" layoutY="23"
                   onMouseClicked="#handleHomeClick" preserveRatio="true">
            <Image url="@/images/home_icon.png" />
        </ImageView>
        <ImageView fx:id="profileIcon" fitHeight="45" fitWidth="42" layoutX="182" layoutY="23"
                   onMouseClicked="#handleProfileClick" preserveRatio="true">
            <Image url="@/images/profile_icon.png" />
        </ImageView>
        <ImageView fx:id="backIcon" fitHeight="45" fitWidth="42" layoutX="294" layoutY="23"
                   onMouseClicked="#handleBackClick" preserveRatio="true">
            <Image url="@/images/back_icon.png" />
        </ImageView>
    </Pane>

</AnchorPane>
